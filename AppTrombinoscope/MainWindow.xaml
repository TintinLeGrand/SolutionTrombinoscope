<Window x:Class="AppTrombinoscope.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppTrombinoscope"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="750">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>

            <RowDefinition Height="5*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <Menu Grid.ColumnSpan="4">
            <Separator Height="100" Width="10"/>
            <MenuItem Header="_Connexion BDD" Click="ConnexionBDD_Click" />
            <Separator Width="10"/>
            <MenuItem Header="_Liste du Personnel" />
            <Separator Width="10"/>
            <MenuItem Header="_Gestion">
                <MenuItem Header="_Services" />
                <MenuItem Header="_Fonctions" />
                <MenuItem Header="_Personnels" />
            </MenuItem>
            <Separator Width="10"/>
            <MenuItem Header="_Gestionaire" />
            <Separator Width="10"/>
            <MenuItem Header="_Paramètres BDD" />
            <Menu/>
        </Menu>
        <TextBlock x:Name="textServices" HorizontalAlignment="Center" Margin="0,20,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Text="Services" FontFamily="Arial"/>

    </Grid>
</Window>
